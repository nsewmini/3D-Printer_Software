@{
}
@model _3D_Printer_Software.Models.TriangleShape
@{
    ViewData["Title"] = "Triangle Page";
}

<h1>Triangle Page</h1>

<form method="post" action="@Url.Action("TrianglePage", "Home")">
    <div class="form-group">
        <label for="side1">Side 1:</label>
        <input type="number" name="side1" id="side1" class="form-control" />
    </div>
    <div class="form-group">
        <label for="side2">Side 2:</label>
        <input type="number" name="side2" id="side2" class="form-control" />
    </div>
    <div class="form-group">
        <label for="side3">Side 3:</label>
        <input type="number" name="side3" id="side3" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Calculate Perimeter</button>
</form>

@if (Model.Perimeter != null)
{
    <h2>The perimeter of the triangle is @Model.Perimeter</h2>
}
